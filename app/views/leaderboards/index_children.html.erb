<h1>Welcome to the Leaderboards!</h1>

<table>
  <tr>
    <th></th>
    <th><%= sorter "Name" %></th>
    <th><%= sorter "Level"%></th>
    <th><%= sorter "Points"%></th>
    <th><%= sorter "food_score" , "Diet Score" %></th>
    <th><%= sorter "exercise_done" , "Exercise Score" %></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= image_tag(user.avatar.image_name, size:"75x50") %></td>
    <td><%= user.name %></td>
    <td><%= user.level %></td>
    <td><%= user.points %></td>
    <td><%= user.food_score %></td>
    <td><%= user.exercise_done %></td>

  </tr>
<% end %>
</table>

