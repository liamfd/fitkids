<h1>Listing avatars</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Story</th>
    <th>Image</th>
    <th>Features</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @avatars.each do |avatar| %>
  <tr>
    <td><%= avatar.name %></td>
    <td><%= avatar.color %></td>
    <td><%= avatar.story %></td>
    <td><%= avatar.image %></td>
    <td><%= avatar.features %></td>
    <td><%= link_to 'Show', avatar %></td>
    <td><%= link_to 'Edit', edit_avatar_path(avatar) %></td>
    <td><%= link_to 'Destroy', avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

