<div id="diet_spot">
	<h3>Diet!</h3>
	</br>
		 
	 <h4>Water:</h4>
	<div class="minorProgBar">
		<div class="innerBar" style="width:<%= @curr_water %>%"></div>
	</div>
	<p>Water_drank = <%= @curr_diet.water_drank %> </p>
	<p>water_serv = <%= @curr_diet.diet_plan.water_serv %> </p>
	<p>Division = <%=  @curr_diet.water_drank.to_f/@curr_diet.diet_plan.water_serv.to_f %> </p>
	<%= button_to "+Water", :action => 'increment_water', :id=>current_user %>
	
	 <h4>Veggies:</h4>
	<div class="minorProgBar">
		<div class="innerBar" style="width:<%= @curr_veggies %>%"></div>
	</div>
	<%= button_to "+Veggies", :action => 'increment_veggies', :id=>current_user %>

	 
	 <h4>Carbs:</h4>
