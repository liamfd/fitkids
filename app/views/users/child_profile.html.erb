	<p>Division = <%=  @curr_diet.carbs_eaten.to_f/@curr_diet.diet_plan.carbs_serv.to_f %> </p>
	<%= button_to "+Carbs", :action => 'increment_carbs', :id=>current_user %>
	 
	 <h4>Protein:</h4>
	<div class="minorProgBar">
		<div class="innerBar" style="width:<%= @curr_prot %>%"></div>
	</div>
	<%= button_to "+Protein", :action => 'increment_prot', :id=>current_user %>
	 
	 <h4>Fruits:</h4>
	<div class="minorProgBar">
		<div class="innerBar" style="width:<%= @curr_fruit %>%"></div>
	</div>
	<%= button_to "+Fruits", :action => 'increment_fruit', :id=>current_user %>
	<p>Fruit_eaten = <%= @curr_diet.fruit_eaten %> </p>
	<p>Fruit_serv = <%= @curr_diet.diet_plan.fruit_serv %> </p>
	<p>Division = <%=  @curr_diet.fruit_eaten.to_f/@curr_diet.diet_plan.fruit_serv.to_f %> </p>
	 
