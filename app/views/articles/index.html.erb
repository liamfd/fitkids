<h2>Listing articles</h2>

<table>
  <tr>
    <th class="name_col">Name</th>
    <th>Topic</th>
    <th>Content</th>
    <th>Creator Name </th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td class="name_col"><div><%= article.name %></div></td>
    <td><%= article.topic %></td>
    <td><div><%= article.content %></td>
    <td><%= if article.watcher != nil 
              article.watcher.name
            else
              "not found"
            end%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Article', new_article_path %>
